<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/dp_5">

    <RelativeLayout
        android:background="@drawable/item_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/project_envelopPic"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_200" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toRightOf="@id/project_envelopPic"
            android:src="@mipmap/icon_round" />

        <TextView
            android:id="@+id/project_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_alignTop="@+id/project_envelopPic"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/img"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Flutter知乎App实践"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/project_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:layout_below="@id/img"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/project_envelopPic"
            android:ellipsize="end"
            android:maxLines="8"
            android:text="lalalalllalalalalllaallaalalal"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/project_niceDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/project_desc"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/project_envelopPic"
            android:text="22小时前"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/project_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/project_niceDate"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/project_niceDate"
            android:text="MeandNi"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
