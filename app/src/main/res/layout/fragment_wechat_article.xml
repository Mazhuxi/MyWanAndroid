<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color">

    <EditText
        android:id="@+id/search_text"
        android:textSize="@dimen/dp_15"
        android:drawableLeft="@mipmap/wechat_search"
        android:layout_marginTop="@dimen/dp_10"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="@dimen/dp_270"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/search_btn"
        android:background="@drawable/search_button_shape"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_15"
        android:textColor="@color/text_color"
        android:text="@string/search"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_30" />
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.BezierRadarHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:srlPrimaryColor="@color/tab_Background">

        </com.scwang.smartrefresh.layout.header.BezierRadarHeader>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>


        <com.scwang.smartrefresh.layout.footer.BallPulseFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlNormalColor="@color/tab_Background"
            app:srlAnimatingColor="@color/tab_Background">

        </com.scwang.smartrefresh.layout.footer.BallPulseFooter>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>